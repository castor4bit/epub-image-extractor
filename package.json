{
  "name": "epub-image-extractor",
  "version": "0.6.2",
  "description": "Desktop application to extract images from EPUB files organized by chapters",
  "main": "dist-electron/main/index.js",
  "author": {
    "name": "castor4bit",
    "email": "30964+castor4bit@users.noreply.github.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run tests/integration",
    "test:integration:coverage": "vitest run --coverage tests/integration",
    "test:all": "npm run test && npm run test:integration",
    "build:e2e": "node scripts/build-e2e.js",
    "test:e2e": "npm run build:e2e && playwright test",
    "test:e2e:headed": "npm run build:e2e && playwright test --headed",
    "test:e2e:debug": "npm run build:e2e && PWDEBUG=1 playwright test",
    "test:e2e:smoke": "npm run build:e2e && playwright test --grep @smoke",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"e2e/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"e2e/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "typecheck": "tsc --noEmit",
    "deps:check": "npm outdated",
    "deps:check:prod": "npm outdated --prod",
    "deps:update": "npm update",
    "deps:update:check": "npx npm-check-updates",
    "deps:update:major": "npx npm-check-updates -u",
    "release": "echo 'To create a release: Go to GitHub Actions → Prepare Release PR → Run workflow'",
    "release:patch": "echo 'To create a patch release: Go to GitHub Actions → Prepare Release PR → Run workflow → Select patch'",
    "release:minor": "echo 'To create a minor release: Go to GitHub Actions → Prepare Release PR → Run workflow → Select minor'",
    "release:major": "echo 'To create a major release: Go to GitHub Actions → Prepare Release PR → Run workflow → Select major'",
    "electron": "electron .",
    "electron:dev": "vite",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac-x64": "npm run build && electron-builder --mac --x64",
    "dist:mac-arm64": "npm run build && electron-builder --mac --arm64"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "fast-xml-parser": "^5.2.5",
    "fflate": "^0.8.2",
    "i18next": "^25.5.2",
    "p-limit": "^7.1.1",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "conventional-commits-parser": "^6.2.0",
    "electron": "^37.5.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.example.epub-image-extractor",
    "productName": "EPUB Image Extractor",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "extendInfo": {
        "CFBundleName": "EPUB Image Extractor",
        "CFBundleDisplayName": "EPUB Image Extractor"
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-${arch}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-Portable.${ext}"
    },
    "publish": null
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "type": "module"
}
